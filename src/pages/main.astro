---
import { langData } from "../private/data"

const data = langData()

import Layout from "../layouts/Layout.astro"
import Header from "../components/Header.astro"
import { Han } from "../components/solid/Han.tsx"
import { FontCheck } from "../components/solid/FontCheck.tsx"

import HanContent from "../components/HanContent.md"

import "@fontsource-variable/noto-sans-hk"
import "@fontsource-variable/noto-sans-tc"
import "@fontsource-variable/noto-sans-sc"
import "@fontsource-variable/noto-sans-jp"
import "@fontsource-variable/noto-sans-kr"

import TwitterImage from "../private/han-twitter.png"
---

<Layout
  title="CJK Han Character Comparison Tool"
  description="Compare how the same Han character is displayed differently between Hong Kong, Japan, Korea, Mainland China and Taiwan"
  metaDescription="Tool to visually compare how the same Han character is displayed differently between Hong Kong, Japan (Kanji), Korea (Hanja), Mainland China (Hanzi) and Taiwan in your browser"
  image={TwitterImage.src}
  imageAlt="Han Comparison: Compare CJK characters between different regions in your browser"
>
  <Header
    title="Han character comparison tool"
    description="Compare CJK character between regions"
  />
  <FontCheck client:only />
  <Han langData={data} client:load />
  <div
    class="prose prose-neutral prose-h2:text-base prose-h2:text-stone-800 prose-a:text-stone-600 prose-a:decoration-stone-300 prose-a:decoration-2 prose-a:underline-offset-2 prose-a:transition-[text-decoration-color] prose-a:ease-in-out prose-a:duration-150 prose-a:hover:decoration-current my-24 max-w-full"
  >
    <HanContent />
  </div>
</Layout>

