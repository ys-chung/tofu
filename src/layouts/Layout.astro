---
import Nav from "../components/Nav.astro"
import Footer from "../components/Footer.astro"
import { SEO } from "astro-seo"

export interface Props {
  title: string
  description: string
  image: string
  imageAlt: string
}

const { description, imageAlt } = Astro.props
const image = Astro.site?.origin + Astro.props.image
const title = `‚ùí ${Astro.props.title} | Tofu`

import "../private/mori/mori.css"
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      description={description}
      charset="UTF-8"
      openGraph={{
        basic: {
          title,
          type: "website",
          image
        },
        optional: {
          description,
          locale: "en_GB",
          siteName: "Tofu"
        },
        image: {
          alt: imageAlt
        }
      }}
      twitter={{
        card: "summary_large_image",
        creator: "@_yschung",
        title,
        description,
        image
      }}
    />
  </head>
  <body class="bg-stone-50 selection:bg-stone-300">
    <div class="mx-auto max-w-screen-md px-4 pb-4 text-neutral-900">
      <Nav />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
    {import.meta.env.PROD && <script defer src="/_vercel/insights/script.js"></script>}
  </body>
</html>
