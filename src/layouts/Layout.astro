---
import Nav from "../components/Nav.astro"
import Footer from "../components/Footer.astro"
import Analytics from "../private/Analytics.astro"
import { SEO } from "astro-seo"

export interface Props {
  title: string
  description: string
  image: string
  imageAlt: string
  metaDescription?: string
}

const {
  description,
  imageAlt,
  metaDescription = Astro.props.description
} = Astro.props
const image = Astro.site?.origin + Astro.props.image
const title = `‚ùí Tofu | ${Astro.props.title}`

import "../styles/global.css"
import "../private/mori/mori.css"
---

<!doctype html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.png" sizes="32x32" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      description={metaDescription}
      charset="UTF-8"
      extend={{
        meta: [
          {
            name: "title",
            content: title
          }
        ]
      }}
      openGraph={{
        basic: {
          title,
          type: "website",
          image
        },
        optional: {
          description,
          locale: "en_GB",
          siteName: "Tofu"
        },
        image: {
          alt: imageAlt
        }
      }}
      twitter={{
        card: "summary_large_image",
        creator: "@_yschung",
        title,
        description,
        image
      }}
    />

    {import.meta.env.PROD && <Analytics />}
  </head>
  <body
    class="bg-stone-50 selection:bg-stone-300 selection:bg-opacity-60 font-sans"
  >
    <div class="mx-auto max-w-3xl px-4 pb-4 text-neutral-900">
      <Nav />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
